{
  "name": "code-tare-native",
  "version": "1.0.0",
  "description": "Code-tare Native: 로컬 프로젝트 관리 macOS 네이티브 앱 - Tauri 기반",
  "type": "module",
  "scripts": {
    "install-all": "cd server && npm install && cd ../client && npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "start:prod": "npm run build && npm run start"
  },
  "keywords": [
    "project-management",
    "dashboard",
    "local-projects",
    "tags",
    "developer-tools"
  ],
  "author": {
    "name": "tare from the better",
    "url": "https://github.com/saisiot"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saisiot/code-tare-native.git"
  },
  "bugs": {
    "url": "https://github.com/saisiot/code-tare-native/issues"
  },
  "homepage": "https://github.com/saisiot/code-tare-native#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
